local senhaChaos = Instance.new("TextBox", painel)
senhaChaos.Size = UDim2.new(0, 240, 0, 30)
senhaChaos.Position = UDim2.new(0.5, -120, 1, -140)
senhaChaos.PlaceholderText = "Senha do Chaos Mode..."
senhaChaos.Text = ""
senhaChaos.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
senhaChaos.BorderColor3 = Color3.fromRGB(255, 0, 0)
senhaChaos.TextColor3 = Color3.fromRGB(255, 0, 0)
senhaChaos.Font = Enum.Font.Code
senhaChaos.TextSize = 14

local function ativarChaosMode()
	mensagemGlobal("[VOIDREAPER] Chaos Mode ativado. Colapso iniciado.", Color3.fromRGB(255, 0, 0))
	tocarSom("1847182874", true) -- Glitch loop

	-- Tela piscando
	for i = 1, 10 do
		Lighting.Ambient = Color3.fromRGB(255, 0, 0)
		wait(0.1)
		Lighting.Ambient = Color3.fromRGB(0, 0, 0)
		wait(0.1)
	end

	-- Spam de mensagens
	for i = 1, 5 do
		mensagemGlobal("[VOIDREAPER] O sistema está em colapso.", Color3.fromRGB(255, 0, 0))
		wait(0.5)
	end

	-- Destruição simulada
	for _, part in ipairs(workspace:GetDescendants()) do
		if part:IsA("BasePart") and part.Anchored and part.Name ~= "HumanoidRootPart" then
			part.Transparency = 1
		end
	end

	-- Aura vermelha
	ativarAura(Color3.fromRGB(255, 0, 0))
end

senhaChaos.FocusLost:Connect(function()
	if senhaChaos.Text == "666X" then
		ativarChaosMode()
	else
		mensagemGlobal("[VOIDREAPER] Senha incorreta.", Color3.fromRGB(255, 255, 255))
		tocarSom("1837635128") -- Voz de erro
	end
end)

local senhaGood = Instance.new("TextBox", painel)
senhaGood.Size = UDim2.new(0, 240, 0, 30)
senhaGood.Position = UDim2.new(0.5, -120, 1, -100)
senhaGood.PlaceholderText = "Senha do Good Mode..."
senhaGood.Text = ""
senhaGood.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
senhaGood.BorderColor3 = Color3.fromRGB(0, 170, 255)
senhaGood.TextColor3 = Color3.fromRGB(0, 170, 255)
senhaGood.Font = Enum.Font.Code
senhaGood.TextSize = 14

local function ativarGoodMode()
	mensagemGlobal("[VOIDREAPER] Good Mode ativado. Sistema estabilizado.", Color3.fromRGB(0, 170, 255))
	tocarSom("1837635128", true) -- Som suave em loop

	-- Aura azul
	ativarAura(Color3.fromRGB(0, 170, 255))

	-- Restaurar céu e luzes
	Lighting.Brightness = 2
	Lighting.ClockTime = 14
	Lighting.FogEnd = 100000
	Lighting.Ambient = Color3.fromRGB(0, 170, 255)
	Lighting.OutdoorAmbient = Color3.fromRGB(100, 100, 255)
	for _, v in pairs(Lighting:GetChildren()) do
		if v:IsA("Sky") then v:Destroy() end
	end
	local sky = Instance.new("Sky", Lighting)
	sky.SkyboxBk = "rbxassetid://159454299"
	sky.SkyboxDn = "rbxassetid://159454296"
	sky.SkyboxFt = "rbxassetid://159454293"
	sky.SkyboxLf = "rbxassetid://159454286"
	sky.SkyboxRt = "rbxassetid://159454300"
	sky.SkyboxUp = "rbxassetid://159454288"

	-- Restaurar mapa
	for _, part in ipairs(workspace:GetDescendants()) do
		if part:IsA("BasePart") and part.Anchored and part.Name ~= "HumanoidRootPart" then
			part.Transparency = 0
			part.Material = Enum.Material.SmoothPlastic
			part.Color = Color3.fromRGB(255, 255, 255)
		end
	end
end

senhaGood.FocusLost:Connect(function()
	if senhaGood.Text == "angelX" then
		ativarGoodMode()
	else
		mensagemGlobal("[VOIDREAPER] Senha incorreta.", Color3.fromRGB(255, 255, 255))
		tocarSom("9118823109") -- Voz digital de erro
	end
end)


local function ativarDefesa()
	mensagemGlobal("[VOIDREAPER] Defesa automática ativada.", Color3.fromRGB(255, 0, 0))
	tocarSom("912977958") -- Pulso
	ativarAura(Color3.fromRGB(255, 0, 0))
end

local function monitorarProximidade()
	while true do
		for _, plr in ipairs(Players:GetPlayers()) do
			if plr ~= player and plr.Character and plr.Character:FindFirstChild("HumanoidRootPart") then
				local dist = (plr.Character.HumanoidRootPart.Position - root.Position).Magnitude
				if dist < 12 then
					ativarDefesa()
				end
			end
		end
		wait(2)
	end
end

task.spawn(monitorarProximidade)

local function infectarMapa()
	for _, part in ipairs(workspace:GetDescendants()) do
		if part:IsA("BasePart") and part.Anchored and part.Name ~= "HumanoidRootPart" then
			part.Material = Enum.Material.Neon
			part.Color = Color3.fromRGB(255, 0, 0)
			part.Transparency = 0.3
		end
	end

	tocarSom("1847182874", true) -- Glitch loop
	mensagemGlobal("[VOIDREAPER] Infecção digital iniciada.", Color3.fromRGB(255, 0, 0))
end

criarBotao("INFECTAR MAPA", infectarMapa)
