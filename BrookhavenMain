-- Proteção por nome
local allowed = {
    ["rafisamumu"] = true,
    ["VoidReaper_Havoc666X"] = true
}
local lp = game.Players.LocalPlayer
if not allowed[lp.Name] then
    lp:Kick("Acesso negado ao VoidReaper Hub.")
    return
end

-- Interface leve (Kavo UI)
local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/ConnoisseurCreations/KavoUI/main/source.lua"))()
local Window = Library.CreateLib("VoidReaper Hub V1.0 Beta", "DarkTheme")

-- Aba: Informações
local Info = Window:NewTab("Informações")
local InfoSection = Info:NewSection("Sobre o Script")
InfoSection:NewLabel("Script By: Reaper Xploits")
InfoSection:NewLabel("Usuário: " .. lp.Name)
InfoSection:NewLabel("Executor: " .. (identifyexecutor and identifyexecutor() or "Desconhecido"))

-- Aba: Admin
local Admin = Window:NewTab("Admin")
local AdminSection = Admin:NewSection("Comandos")
AdminSection:NewButton("Voo", "Ativa voo", function()
    local hrp = lp.Character and lp.Character:FindFirstChild("HumanoidRootPart")
    if hrp then hrp.Velocity = Vector3.new(0, 100, 0) end
end)
AdminSection:NewButton("Velocidade 100", "Aumenta velocidade", function()
    local hum = lp.Character and lp.Character:FindFirstChildOfClass("Humanoid")
    if hum then hum.WalkSpeed = 100 end
end)
AdminSection:NewButton("Invisível", "Deixa invisível", function()
    for _, part in pairs(lp.Character:GetDescendants()) do
        if part:IsA("BasePart") then part.Transparency = 1 end
    end
end)

-- Aba: Avatar
local Avatar = Window:NewTab("Avatar")
local AvatarSection = Avatar:NewSection("Personagem")
AvatarSection:NewButton("Resetar", "Reseta personagem", function()
    lp:LoadCharacter()
end)

-- Aba: Som
local Som = Window:NewTab("Sound All")
local SomSection = Som:NewSection("Tocar Som")
SomSection:NewTextBox("ID do Som", "Digite o ID", function(id)
    local s = Instance.new("Sound", workspace)
    s.SoundId = "rbxassetid://" .. id
    s.Volume = 5
    s:Play()
end)

-- Aba: Lag
local Lag = Window:NewTab("Lag Server")
local LagSection = Lag:NewSection("Spam")
LagSection:NewButton("Spam Partes", "Cria partes para lag", function()
    for i = 1, 100 do
        local p = Instance.new("Part", workspace)
        p.Size = Vector3.new(1,1,1)
        p.Position = lp.Character.HumanoidRootPart.Position + Vector3.new(math.random(-10,10), 5, math.random(-10,10))
    end
end)

-- Proteção contra Kick
local mt = getrawmetatable(game)
setreadonly(mt, false)
local old = mt.__namecall
mt.__namecall = newcclosure(function(self, ...)
    if getnamecallmethod() == "Kick" and self == lp then
        warn("Kick bloqueado.")
        return
    end
    return old(self, ...)
end)
