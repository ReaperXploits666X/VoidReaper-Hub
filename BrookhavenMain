-- Proteção por nome
local allowed = {
    ["Minemods"] = true,
    ["VoidReaper_Havoc666X"] = true
}

local lp = game.Players.LocalPlayer
if not allowed[lp.Name] then
    lp:Kick("Acesso negado ao VoidReaper Hub.")
    return
end

-- Carrega a biblioteca RedzhubUI
local redzlib = loadstring(game:HttpGet("https://raw.githubusercontent.com/tbao143/Library-ui/refs/heads/main/Redzhubui"))()

-- Cria a janela principal
local Window = redzlib:MakeWindow({
    Title = "VoidReaper Hub",
    SubTitle = "Versão 1.0 beta",
    SaveFolder = "VoidReaperHub"
})

-- Aba: Comandos
local Comandos = Window:MakeTab({
    Name = "Comandos",
    Icon = "",
    PremiumOnly = false
})

Comandos:AddButton({
    Name = "Ativar Voo",
    Callback = function()
        local hrp = lp.Character and lp.Character:FindFirstChild("HumanoidRootPart")
        if hrp then hrp.Velocity = Vector3.new(0, 100, 0) end
    end
})

Comandos:AddButton({
    Name = "Velocidade 100",
    Callback = function()
        local hum = lp.Character and lp.Character:FindFirstChildOfClass("Humanoid")
        if hum then hum.WalkSpeed = 100 end
    end
})

Comandos:AddButton({
    Name = "Invisibilidade",
    Callback = function()
        for _, part in pairs(lp.Character:GetDescendants()) do
            if part:IsA("BasePart") then
                part.Transparency = 1
            end
        end
    end
})

Comandos:AddButton({
    Name = "Resetar Personagem",
    Callback = function()
        lp:LoadCharacter()
    end
})

-- Aba: Visual
local Visual = Window:MakeTab({
    Name = "Visual",
    Icon = "",
    PremiumOnly = false
})

Visual:AddButton({
    Name = "Ativar ESP (Vermelho)",
    Callback = function()
        for _, plr in pairs(game.Players:GetPlayers()) do
            if plr ~= lp and plr.Character then
                local hl = Instance.new("Highlight")
                hl.Name = "VoidESP"
                hl.FillColor = Color3.fromRGB(255, 0, 0)
                hl.OutlineColor = Color3.fromRGB(0, 0, 0)
                hl.FillTransparency = 0.5
                hl.OutlineTransparency = 0
                hl.Adornee = plr.Character
                hl.Parent = plr.Character
            end
        end
    end
})

Visual:AddButton({
    Name = "Remover ESP",
    Callback = function()
        for _, plr in pairs(game.Players:GetPlayers()) do
            if plr.Character and plr.Character:FindFirstChild("VoidESP") then
                plr.Character.VoidESP:Destroy()
            end
        end
    end
})

-- Aba: Utilitários
local Util = Window:MakeTab({
    Name = "Utilitários",
    Icon = "",
    PremiumOnly = false
})

Util:AddTextbox({
    Name = "Teleportar até jogador",
    Default = "",
    TextDisappear = true,
    Callback = function(nome)
        local target = game.Players:FindFirstChild(nome)
        if target and target.Character and target.Character:FindFirstChild("HumanoidRootPart") then
            local hrp = lp.Character and lp.Character:FindFirstChild("HumanoidRootPart")
            if hrp then
                hrp.CFrame = target.Character.HumanoidRootPart.CFrame + Vector3.new(0, 5, 0)
            end
        end
    end
})

Util:AddButton({
    Name = "Fake ;kill no chat",
    Callback = function()
        local head = lp.Character and lp.Character:FindFirstChild("Head")
        if head then
            game:GetService("Chat"):Chat(head, ";kill all", Enum.ChatColor.Red)
        end
    end
})

Util:AddButton({
    Name = "Fake ;kick no chat",
    Callback = function()
        local head = lp.Character and lp.Character:FindFirstChild("Head")
        if head then
            game:GetService("Chat"):Chat(head, ";kick all", Enum.ChatColor.Red)
        end
    end
})
