local gui = Instance.new("ScreenGui", game.CoreGui)
gui.Name = "Tubers93Hub"
gui.ResetOnSpawn = false

-- Mensagem global ao ativar
game.StarterGui:SetCore("ChatMakeSystemMessage", {
	Text = "[TUBERS93] O sistema foi invadido.";
	Color = Color3.fromRGB(255, 0, 0);
	Font = Enum.Font.Code;
	TextSize = 18;
})

-- Painel central
local painel = Instance.new("Frame", gui)
painel.Size = UDim2.new(0, 500, 0, 300)
painel.Position = UDim2.new(0.5, -250, 0.5, -150)
painel.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
painel.BorderSizePixel = 4
painel.BorderColor3 = Color3.fromRGB(255, 0, 0)
painel.Active = true
painel.Draggable = true

-- Efeito de borda pulsante
task.spawn(function()
	while painel and painel.Parent do
		painel.BorderColor3 = Color3.fromRGB(math.random(200,255), 0, 0)
		wait(0.1)
	end
end)

-- Título piscante
local titulo = Instance.new("TextLabel", painel)
titulo.Size = UDim2.new(1, 0, 0, 40)
titulo.Text = "TUBERS93 HUB"
titulo.BackgroundTransparency = 1
titulo.TextColor3 = Color3.fromRGB(255, 0, 0)
titulo.Font = Enum.Font.Code
titulo.TextSize = 28

task.spawn(function()
	while titulo and titulo.Parent do
		titulo.TextTransparency = titulo.TextTransparency == 0 and 0.5 or 0
		wait(0.3)
	end
end)

-- Botão de fechar
local fechar = Instance.new("TextButton", painel)
fechar.Size = UDim2.new(0, 40, 0, 40)
fechar.Position = UDim2.new(1, -45, 0, 0)
fechar.Text = "X"
fechar.BackgroundColor3 = Color3.fromRGB(50, 0, 0)
fechar.TextColor3 = Color3.fromRGB(255, 0, 0)
fechar.Font = Enum.Font.Code
fechar.TextSize = 20
fechar.MouseButton1Click:Connect(function()
	painel:Destroy()
end)

-- Botão de glitch visual
local glitch = Instance.new("TextButton", painel)
glitch.Size = UDim2.new(0, 200, 0, 40)
glitch.Position = UDim2.new(0.5, -100, 0.5, -20)
glitch.Text = "ATIVAR GLITCH"
glitch.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
glitch.BorderColor3 = Color3.fromRGB(255, 0, 0)
glitch.TextColor3 = Color3.fromRGB(255, 0, 0)
glitch.Font = Enum.Font.Code
glitch.TextSize = 16
glitch.MouseButton1Click:Connect(function()
	local invert = Instance.new("ColorCorrectionEffect", game.Lighting)
	invert.TintColor = Color3.fromRGB(255, 0, 0)
	invert.Contrast = -1
	invert.Saturation = -1
end)
