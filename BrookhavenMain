local Players = game:GetService("Players")
local Lighting = game:GetService("Lighting")
local SoundService = game:GetService("SoundService")
local player = Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local root = char:WaitForChild("HumanoidRootPart")

-- Criar GUI principal
local gui = Instance.new("ScreenGui", game.CoreGui)
gui.Name = "VoidReaperHub"
gui.ResetOnSpawn = false

-- Painel principal
local painel = Instance.new("Frame", gui)
painel.Size = UDim2.new(0, 520, 0, 360)
painel.Position = UDim2.new(0.5, -260, 0.5, -180)
painel.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
painel.BorderColor3 = Color3.fromRGB(255, 0, 0)
painel.BorderSizePixel = 3
painel.Active = true
painel.Draggable = true

-- Título
local titulo = Instance.new("TextLabel", painel)
titulo.Size = UDim2.new(1, 0, 0, 40)
titulo.Text = "VOIDREAPER_HAVOC666X HUB"
titulo.BackgroundTransparency = 1
titulo.TextColor3 = Color3.fromRGB(255, 0, 0)
titulo.Font = Enum.Font.Arcade
titulo.TextSize = 24

-- Função para criar botões
local ordemBotao = 0
local function criarBotao(nome, func)
	ordemBotao += 1
	local btn = Instance.new("TextButton", painel)
	btn.Size = UDim2.new(0, 240, 0, 30)
	btn.Position = UDim2.new(0, 20 + ((ordemBotao-1)%2)*260, 0, 50 + math.floor((ordemBotao-1)/2)*40)
	btn.Text = nome
	btn.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
	btn.BorderColor3 = Color3.fromRGB(255, 0, 0)
	btn.TextColor3 = Color3.fromRGB(255, 0, 0)
	btn.Font = Enum.Font.Code
	btn.TextSize = 14
	btn.MouseButton1Click:Connect(func)
end

local function tocarSom(id, loop)
	local sound = Instance.new("Sound", SoundService)
	sound.SoundId = "rbxassetid://" .. id
	sound.Volume = 1
	sound.Looped = loop or false
	sound:Play()
end

local function ativarAura(cor)
	if char:FindFirstChild("VoidAura") then return end
	local aura = Instance.new("Part", char)
	aura.Name = "VoidAura"
	aura.Size = Vector3.new(6, 6, 6)
	aura.Shape = Enum.PartType.Ball
	aura.Material = Enum.Material.Neon
	aura.Color = cor
	aura.Anchored = false
	aura.CanCollide = false
	aura.Transparency = 0.5
	local weld = Instance.new("WeldConstraint", aura)
	weld.Part0 = aura
	weld.Part1 = root
end

local function mensagemGlobal(texto, cor)
	game.StarterGui:SetCore("ChatMakeSystemMessage", {
		Text = texto;
		Color = cor;
		Font = Enum.Font.Code;
		TextSize = 18;
	})
end

-- Ativar som de glitch
criarBotao("Som Glitch", function()
	tocarSom("1847182874") -- Tubers93 Glitch
end)

-- Ativar aura vermelha
criarBotao("Aura Vermelha", function()
	ativarAura(Color3.fromRGB(255, 0, 0))
end)

-- Ativar aura azul (Good Mode)
criarBotao("Aura Azul", function()
	ativarAura(Color3.fromRGB(0, 170, 255))
end)

-- Mensagem global
criarBotao("Mensagem Global", function()
	mensagemGlobal("[VOIDREAPER] Sistema estabilizado.", Color3.fromRGB(0, 170, 255))
end)

-- Travar todos (menos você)
criarBotao("Travar todos (menos você)", function()
	for _, plr in ipairs(Players:GetPlayers()) do
		if plr ~= player then
			local hum = plr.Character and plr.Character:FindFirstChildOfClass("Humanoid")
			if hum then
				hum.WalkSpeed = 0
				hum.JumpPower = 0
				hum.PlatformStand = true
			end
		end
	end
	mensagemGlobal("[VOIDREAPER] Jogadores travados.", Color3.fromRGB(255, 0, 0))
	tocarSom("912977958") -- Hacker Static
end)

-- Apagar luzes e corromper céu
criarBotao("Apagar luzes e corromper céu", function()
	Lighting.Brightness = 0
	Lighting.ClockTime = 0
	Lighting.FogEnd = 10
	for _, v in pairs(Lighting:GetChildren()) do
		if v:IsA("Sky") then v:Destroy() end
	end
	local sky = Instance.new("Sky", Lighting)
	sky.SkyboxBk = "rbxassetid://0"
	sky.SkyboxDn = "rbxassetid://0"
	sky.SkyboxFt = "rbxassetid://0"
	sky.SkyboxLf = "rbxassetid://0"
	sky.SkyboxRt = "rbxassetid://0"
	sky.SkyboxUp = "rbxassetid://0"
	Lighting.Ambient = Color3.fromRGB(255, 0, 0)
	Lighting.OutdoorAmbient = Color3.fromRGB(50, 0, 0)
	mensagemGlobal("[VOIDREAPER] Céu corrompido.", Color3.fromRGB(255, 0, 0))
	tocarSom("9118823109") -- VoidReaper Pulse
end)

-- Simular destruição do mapa
criarBotao("Simular destruição do mapa", function()
	for _, part in ipairs(workspace:GetDescendants()) do
		if part:IsA("BasePart") and part.Anchored and part.Name ~= "HumanoidRootPart" then
			part.Transparency = 1
		end
	end
	mensagemGlobal("[VOIDREAPER] Mapa colapsado.", Color3.fromRGB(255, 0, 0))
	tocarSom("138186576") -- Jumpscare Digital
end)

-- Mensagem global personalizada
