-- Proteção por nome
local allowed = {
    ["rafisamumu"] = true,
    ["VoidReaper_Havoc666X"] = true
}
local lp = game.Players.LocalPlayer
if not allowed[lp.Name] then
    lp:Kick("Acesso negado ao VoidReaper Hub.")
    return
end

-- Interface RedzhubUI
local redzlib = loadstring(game:HttpGet("https://raw.githubusercontent.com/tbao143/Library-ui/main/Redzhubui"))()
local Window = redzlib:MakeWindow({
    Title = "VoidReaper Hub",
    SubTitle = "Versão 1.0 Beta",
    SaveFolder = "VoidReaperHub"
})

-- Aba: Informações
local Info = Window:MakeTab({ Name = "Informações", Icon = "" })
Info:AddParagraph("Script By", "Reaper Xploits")
Info:AddParagraph("Usuário", lp.Name)
Info:AddParagraph("Executor", identifyexecutor and identifyexecutor() or "Desconhecido")

-- Aba: Admin
local Admin = Window:MakeTab({ Name = "Admin", Icon = "" })
Admin:AddButton({ Name = "Voo", Callback = function()
    local hrp = lp.Character and lp.Character:FindFirstChild("HumanoidRootPart")
    if hrp then hrp.Velocity = Vector3.new(0, 100, 0) end
end })
Admin:AddButton({ Name = "Velocidade 100", Callback = function()
    local hum = lp.Character and lp.Character:FindFirstChildOfClass("Humanoid")
    if hum then hum.WalkSpeed = 100 end
end })
Admin:AddButton({ Name = "Invisível", Callback = function()
    for _, part in pairs(lp.Character:GetDescendants()) do
        if part:IsA("BasePart") then part.Transparency = 1 end
    end
end })

-- Aba: Avatar
local Avatar = Window:MakeTab({ Name = "Avatar", Icon = "" })
Avatar:AddButton({ Name = "Resetar", Callback = function()
    lp:LoadCharacter()
end })

-- Aba: Sound All
local Som = Window:MakeTab({ Name = "Sound All", Icon = "" })
Som:AddTextbox({ Name = "Tocar Som (ID)", Default = "", TextDisappear = true, Callback = function(id)
    local s = Instance.new("Sound", workspace)
    s.SoundId = "rbxassetid://" .. id
    s.Volume = 5
    s:Play()
end })

-- Aba: Lag Server
local Lag = Window:MakeTab({ Name = "Lag Server", Icon = "" })
Lag:AddButton({ Name = "Spam Partes", Callback = function()
    for i = 1, 100 do
        local p = Instance.new("Part", workspace)
        p.Size = Vector3.new(1,1,1)
        p.Position = lp.Character.HumanoidRootPart.Position + Vector3.new(math.random(-10,10), 5, math.random(-10,10))
    end
end })

-- Proteção contra Kick
local mt = getrawmetatable(game)
setreadonly(mt, false)
local old = mt.__namecall
mt.__namecall = newcclosure(function(self, ...)
    if getnamecallmethod() == "Kick" and self == lp then
        warn("Kick bloqueado.")
        return
    end
    return old(self, ...)
end)
